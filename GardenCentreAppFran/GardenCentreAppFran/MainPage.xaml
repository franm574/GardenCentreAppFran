<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCentreAppFran.MainPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Garden Centre Login" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="nameEntry" Placeholder="Full Name"/>
        <Entry x:Name="phoneEntry" Placeholder="Phone Number" Keyboard="Telephone"/>
        <CheckBox x:Name="corporateCheckBox"/>
        <Label Text="Corporate Client?" />

        <Button Text="Login" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>
